{
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "allowJs": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
    "./test/**/*.ts",
    "./test/**/*.js"
  ],
  "exclude": ["node_modules", "./dist/**/*"],
  "ts-node": {
    "transpileOnly": true
  }
}
