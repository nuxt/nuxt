{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "module": "ES2022",
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "noEmit": true,
        "target": "ES2022",
        "types": [
            "../../../packages/types",
            "./types/vue",
        ],
        "strict": true,
    },
    "include": [
        "./components/*.vue",
        "./pages/*.vue",
    ],
    "vueCompilerOptions": {
        "strictTemplates": true,
        "target": 2.7
    }
}
