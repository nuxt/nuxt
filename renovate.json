{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>nuxt/renovate-config-nuxt",
    ":pinDevDependencies",
    ":widenPeerDependencies"
  ],
  "baseBranches": [
    "main",
    "3.x"
  ],
  "packageRules": [
    {
      "groupName": "vitest",
      "matchPackageNames": [
        "vite-node",
        "vitest"
      ],
      "matchPackagePatterns": [
        "^@vitest/"
      ]
    },
    {
      "matchBaseBranches": [
        "main",
        "3.x"
      ],
      "ignoreDeps": [
        "nitro",
        "h3",
        "nuxt",
        "nuxt3",
        "@nuxt/kit"
      ]
    },
    {
      "groupName": "typescript",
      "matchPackageNames": [
        "typescript"
      ]
    },
    {
      "groupName": "webpack",
      "matchPackageNames": [
        "webpack",
        "memfs"
      ]
    }
  ]
}
